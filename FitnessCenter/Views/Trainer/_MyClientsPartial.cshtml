@model List<FitnessCenter.Models.ApplicationUser>

<h4>Мои клиенти:</h4>

@if (Model.Count==0)
{
    <p>Сѐ уште немате доделено ниту еден клиент.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Име</th>
                <th>Презиме</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var client in Model)
            {
                <tr>
                    <td>@client.FirstName</td>
                    <td>@client.LastName</td>
                    <td>@client.Email</td>
                    <td>
                        @using (Html.BeginForm("RemoveClient","Trainer",FormMethod.Post))
                        {
                            @Html.Hidden("clientId",client.Id)
                            <input type="submit" value="Отстрани" class="btn btn-danger"/>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
