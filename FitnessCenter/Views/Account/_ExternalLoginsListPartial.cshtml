@model FitnessCenter.Models.ExternalLoginListViewModel
@using Microsoft.Owin.Security

<h4>Користете друга услуга за најава.</h4>
<hr />
@{
    var loginProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes();
    if (loginProviders.Count() == 0) {
        <div>
            <p>
                Нема конфигурирани услуги за надворешна автентикација. Погледнете ја <a href="https://go.microsoft.com/fwlink/?LinkId=403804">оваа статија</a>
                за детали за поставување на оваа ASP.NET апликација за поддршка на најава преку надворешни услуги.
            </p>
        </div>
    }
    else {
        using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { role = "form" })) {
            @Html.AntiForgeryToken()
            <div id="socialLoginList">
                <p>
                    @foreach (AuthenticationDescription p in loginProviders) {
                        <button type="submit" class="btn btn-outline-dark" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account">@p.AuthenticationType</button>
                    }
                </p>
            </div>
        }
    }
}
